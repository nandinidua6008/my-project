<%= form_for @employee do |f| %>
  <%= f.hidden_field :id, :value => @employee.id %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :phone %>:
  <%= f.text_field :phone %><br />

  <%= f.label :city %>:
  <%= f.text_field :city %><br />

  <%= f.label :state %>:
  <%= f.text_field :state %><br />

  <%= f.submit %>
 <% end %>