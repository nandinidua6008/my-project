<%= form_for @employees do |f| %>
<%= f.hidden_field :id, :value => @employees.id %>
  	<%= f.label :emp_code %>:
  	<%= f.text_field :emp_code %><br />

  <%= f.label :first_name %>:
  <%= f.text_field :first_name %><br />

  <%= f.label :last_name %>:
  <%= f.text_field :last_name %><br />

  <%= f.label :email%>:
  <%= f.text_field :email %><br />

  <%= f.label :password%>:
  <%= f.text_field :password %><br />

  <%= f.submit %>
<% end %> 
